<div style="margin-top: -150px;">
  <%= render "profiles/social_profiles" %>
</div>

<br />
<br />


<div class="container">

	<% if current_user.profile.id == @profile.id %>
    <%= form_tag(profiles_post_to_social_network_path, :method => "post") do %>
      <%= text_field_tag 'post_id','', :class => "sign_up_text", :placeholder => "Post to everywhere." %>
	   <%= submit_tag "Post Status", :class => "sign_up_text" %>
		<% end %>
	<% end %>
  <%= check_box_tag "twitter", true, true %>
  <%= label_tag "Twitter" %>
  <%= check_box_tag "facebook", true, true %>
  <%= label_tag "Facebook" %>

	<% if @profile.microposts.blank? == false %>

		<div class="micro">

			<h3>Status Updates:</h3>
		<% @profile.microposts.each do |p| %>

    		  <p class="posts">
    				<%= p.content %>
    			</p>

		    <% end %>
	   <% end %>

    </div>



	<p>
		<% if current_user.profile.id == @profile.id %>

		<%= @profile.first_name %> <%= @profile.last_name %>  |

		<%= link_to "Edit Profile", edit_profile_path %>  |

		<%= link_to "Sign out", signout_path %> 

	<% end %>
	</p>


		<p>
			<%= @profile.bio %>
		</p>

</div>

<br />



